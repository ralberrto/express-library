extends layout 

block content 
  h1 Author: #{author.name}
  if author.lifespan 
    p #{author.lifespan}

  div(style='margin-top: 20px; margin-left: 20px;')
    h4 Books

    dl 
      each book in authorBooks 
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}
      else 
        p This author has no books.
  hr
  p 
    a.text-danger(href=author.url + '/delete') Delete author